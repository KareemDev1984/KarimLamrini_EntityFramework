

@{
    ViewBag.Title = "Home Page";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["Message"]
    </div>
}

<div class="alert alert-warning ">
    <h1 class="text-center">Schoollibrary</h1>
</div>


<div class="row">
    <a  href="/School/AddStudent">
        <div class=" col-md-4">
            <div class="alert alert-warning alert-dismissible">

                <h4 class="card-title">Students</h4>
                <img src="~/Content/graduate-student-avatar.png" class="img-responsive" />
            </div>
            @*<p> <h2><a class="btn btn-danger btn-group-lg btn-block " href="/School/AddStudent">Students</a></h2></p>*@
        </div>
    </a>
    <a href="/School/AddAuthor">
        <div class=" col-md-4">
            <div class="alert alert-warning alert-dismissible ">
                <h4 class="card-title">Authors</h4>
                <img src="~/Content/hand-writing-with-ballpen.png" class="img-responsive" />
            </div>
        </div>
    </a>
    <a  href="/School/AddBook">
        <div class=" col-md-4">
            <div class="alert alert-warning alert-dismissible ">
                <h4 class="card-title">Books</h4>
                <img src="~/Content/books-stack-of-three.png" class="img-responsive">
            </div>   
        </div>
    </a>
</div>




